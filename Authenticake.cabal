                       , FlexibleInstances
                       , MultiParamTypeClasses
                       , ScopedTypeVariables
                       , FlexibleContexts
                       , AutoDeriveTypeable
                       , GeneralizedNewtypeDeriving
                       , DeriveFunctor
  
  -- Other library packages from which modules are imported.
  build-depends:       base >=4.7 && <4.8
                     , transformers >= 0.3
                     , containers >= 0.2
                     , text >= 1.2 && <= 1.3
  
